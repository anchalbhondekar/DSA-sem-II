#include<iostream> 
#include<cstring>



using namespace std;


class Node {



public:

char title[50];

int child;
Node *child_add[100]; } * root;



class Book

{
public: Book() {

root = NULL;


    
}
void insert() {



root = new Node();


cout << "Enter the name of the book:- " << endl; cin >> root->title;


cout << "Enter the number of chapters in the book:- " << endl; cin >> root->child;


for (int i = 0; i < root->child; i++) {

root->child_add[i] = new Node();
cout << "Enter the name of chapter:- " << endl; cin >> root->child_add[i]->title;
cout << "Enter the number of sections:- " << endl; cin >> root->child_add[i]->child;

for (int j = 0; j < root->child_add[i]->child; j++)

{
root->child_add[i]->child_add[j] = new Node(); cout << "Enter the name of sections:- " << endl; cin >> root->child_add[i]->child_add[j]->title;
cout << "Enter the number of subsetions:- " << endl; cin >> root->child_add[i]->child_add[j]->child;
for (int k = 0; k < root->child_add[i]->child_add[j]->child; k++) {
root->child_add[i]->child_add[j]->child_add[k] = new Node(); cout << "Enter the name of subsections:- " << endl;

cin >> root->child_add[i]->child_add[j]->child_add[k]->title;

}
}
}
}
void display() {

if (root != NULL)

{
cout << "Name of the book is:- " << root->title << endl; for (int i = 0; i < root->child; i++)

{
cout << "Chapter name is:- " << root->child_add[i]->title << endl; for (int j = 0; j < root->child_add[i]->child; j++)

{

cout << "section name is:- " << root->child_add[i]->child_add[j]->title << endl;
for (int k = 0; k < root->child_add[i]->child_add[j]->child; k++) {

cout << "subsection name is:- " << root->child_add[i]->child_add[j]->child_add[k]->title << endl;

}
}
}
}
}
};
int main(int argc, char const *argv[]) {


Book book1; int choice; do

{

cout << "_Select The Operation That you Want To Perform_" << endl;

cout << "1. Insert a Node." << endl;

cout << "2. Display The TREE Data." << endl;

cout << "3. Exit" << endl;
cout << "Enter Your choice :- " << endl; cin >> choice;
switch (choice) {
case 1: book1.insert(); break;

case 2:

if (root == NULL)
{
    cout << endl
<< "Error :- Insert data in tree" << endl << endl;
} else {

book1.display();

